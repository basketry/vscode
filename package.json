{
  "name": "basketry-vscode",
  "displayName": "Basketry for VSCode",
  "version": "0.0.0",
  "description": "Base project for creating a console application in Typescript",
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./lib/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "basketry-vscode.start",
        "title": "Start",
        "category": "Basketry"
      },
      {
        "command": "basketry-vscode.stop",
        "title": "Stop",
        "category": "Basketry"
      },
      {
        "command": "basketry-vscode.restart",
        "title": "Restart",
        "category": "Basketry"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "basketry.config.json",
        "url": "./node_modules/basketry/lib/config-schema.json"
      }
    ]
  },
  "scripts": {
    "test": "jest",
    "clean": "run-s -s clean:*",
    "lint": "run-s -s lint:*",
    "fix": "run-s -s fix:*",
    "clean:output": "rimraf lib",
    "start": "node ./lib/index.js",
    "prebuild": "run-s -s clean lint",
    "build": "tsc",
    "lint:eslint": "eslint src --ext ts",
    "fix:eslint": "eslint --fix src --ext ts",
    "lint:prettier": "prettier -c .",
    "fix:prettier": "prettier -w .",
    "clean:coverage": "rimraf coverage",
    "pretest": "run-s -s clean",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "files": [
    "lib"
  ],
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.31",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "glob": "^8.0.1",
    "jest": "^27.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "ts-loader": "^9.3.0",
    "typescript": "^4.6.3",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "basketry": "^0.0.13"
  }
}
